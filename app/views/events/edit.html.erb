<h1>Edit Event!</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @event do |f| %>
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="field">
				<%= f.label :location %>
				<%= f.text_field :location, class: 'form-control' %>
			</div>
			<div class="field">
				<%= f.label :date %>
				<%= f.date_field :date, class: 'form-control' %>
			</div>
			<div class="field">
				<%= f.label :time %>
				<%= f.time_field :time, class: 'form-control' %>
			</div>
			<div class="field">
				<%= f.label :venue %>
				<%= f.text_field :venue, class: 'form-control' %>
			</div>
			<div class="field">
				<%= f.label :venue_address %>
				<%= f.text_field :venue_address, class: 'form-control' %>
			</div>
			
			<div class="col-md-4 checkbox-list">
				<%= f.collection_check_boxes :user_ids, User.all, :id, :email %>
			</div>

			<div class="action">
				<%= f.submit "Save Changes!", class: "btn btn-primary" %>
			</div>

<% end %>

<%= link_to "Back to Events", events_path %>